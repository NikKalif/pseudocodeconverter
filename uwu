import os
linearray = []

def lineprint():
    file = input("What file would you like to convert? Include .py!")
    exists = os.path.isfile(file)
    if exists:
        openfile = open(file, "r")
        readfile = openfile.readlines()

        for line in readfile:
            line = line.strip('\n')
            # print(line)
            linearray.append(line)

        print(linearray)
    else:
        print("File invalid")

lineprint()

def convertelif():
    elifcounter = 0
    for i in linearray:
        elifcounter += 1
        if "elif" in i:
            print("elif found!")
            print("elif in line", elifcounter)

convertelif()
