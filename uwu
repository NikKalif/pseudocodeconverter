#     file = input("What file would you like to write into?")
#     writefile = open(file, "w")
#     for i in linearray:

#
# splitline()

def recombine():
    file = input("What file would you like to write it into?")
    writefile = open(file, "w")
    for i in linearray:
        writefile.write(i)
        writefile.write("\n")

recombine()
